select * from Customers

select * from Books

select * from Orders

-- Level - 1

-- Show all customers' first and last names.

select first_name, last_name from Customers

select top 2 first_name from Customers

-- Display all book titles and their prices sorted by price (highest first).

select top 2 * from Books

select title, price from Books order by price desc

-- Retrieve all orders placed after '2025-04-01'.

select top 2 * from Orders

select * from Orders where order_date > '2025-04-01'

-- Find all books where stock_quantity < 60.

select * from Books where stock_quantity < 60

-- Show book titles and rename column title as Book_Name.

select title as Book_name from Books







